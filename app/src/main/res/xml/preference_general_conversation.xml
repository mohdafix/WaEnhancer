<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/conversation">

        <rikka.material.preference.MaterialSwitchPreference
            app:key="showonline"
            app:summary="@string/show_toast_on_contact_online_sum"
            app:title="@string/show_toast_on_contact_online" />

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/toastdeleted_entries"
            app:entryValues="@array/toastdeleted_values"
            app:iconSpaceReserved="false"
            app:key="toastdeleted"
            app:summary="@string/toast_on_delete_sum"
            app:title="@string/toast_on_delete" />

        <MultiSelectListPreference
            app:defaultValue="@array/notification_filter_values"
            app:entries="@array/notification_filter_entries"
            app:entryValues="@array/notification_filter_values"
            app:iconSpaceReserved="false"
            app:key="notification_filter"
            app:summary="@string/filter_notification_types_sum"
            app:title="@string/filter_notification_types" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="toast_viewed_message"
            app:summary="@string/toast_on_viewed_message_sum"
            app:title="@string/toast_on_viewed_message" />

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/antirevoke_entries"
            app:entryValues="@array/antirevoke_values"
            app:iconSpaceReserved="false"
            app:key="antirevoke"
            app:summary="@string/antirevoke_sum"
            app:title="@string/antirevoke" />

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/antirevoke_entries"
            app:entryValues="@array/antirevoke_values"
            app:iconSpaceReserved="false"
            app:key="antirevokestatus"
            app:summary="@string/antirevokestatus_sum"
            app:title="@string/antirevokestatus" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="antidisappearing"
            app:summary="@string/antidisappearing_sum"
            app:title="@string/antidisappearing" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="broadcast_tag"
            app:summary="@string/show_chat_broadcast_icon_sum"
            app:title="@string/show_chat_broadcast_icon" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="pinnedlimit"
            app:summary="@string/disable_pinned_limit_sum"
            app:title="@string/disable_pinned_limit" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="removeforwardlimit"
            app:summary="@string/removeforwardlimit_sum"
            app:title="@string/removeforwardlimit" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="hidetag"
            app:summary="@string/hidetag_sum"
            app:title="@string/hidetag" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="revokeallmessages"
            app:summary="@string/delete_for_everyone_all_messages_sum"
            app:title="@string/delete_for_everyone_all_messages" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="removeseemore"
            app:summary="@string/remove_see_more_button_"
            app:title="@string/remove_see_more_button" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="antieditmessages"
            app:summary="@string/show_edited_message_history_sum"
            app:title="@string/show_edited_message_history" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="alertsticker"
            app:summary="@string/enable_confirmation_to_send_sticker_sum"
            app:title="@string/enable_confirmation_to_send_sticker" />



        <rikka.material.preference.MaterialSwitchPreference
            app:key="calltype"
            app:summary="@string/selection_of_call_type_sum"
            app:title="@string/selection_of_call_type" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="disable_defemojis"
            app:summary="@string/disable_default_emojis_sum"
            app:title="@string/disable_default_emojis" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="stamp_copied_message"
            app:summary="@string/stamp_copied_messages_sum"
            app:title="@string/stamp_copied_messages" />

        <rikka.material.preference.MaterialSwitchPreference
            app:defaultValue="true"
            app:key="doubletap2like"
            app:summary="@string/double_click_to_like_sum"
            app:title="@string/double_click_to_react" />

        <com.wmods.wppenhacer.preference.LimitedEditTextPreference
            app:defaultValue="ðŸ‘"
            app:dependency="doubletap2like"
            app:key="doubletap2like_emoji"
            app:maxLength="2"
            app:summary="@string/custom_reaction_sum"
            app:title="@string/custom_reaction" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="google_translate"
            app:summary="@string/google_translate_sum"
            app:title="@string/google_translate" />

        <ListPreference
            android:dependency="google_translate"
            android:defaultValue="google"
            android:entries="@array/translation_provider_entries"
            android:entryValues="@array/translation_provider_values"
            app:key="translation_provider"
            app:summary="@string/translation_provider_sum"
            app:title="@string/translation_provider" />

        <EditTextPreference
            android:dependency="google_translate"
            app:key="target_translation_language"
            app:summary="@string/target_translation_language_sum"
            app:title="@string/target_translation_language" />


        <rikka.material.preference.MaterialSwitchPreference
            app:key="verify_blocked_contact"
            app:summary="@string/show_contact_blocked_sum"
            app:title="@string/show_contact_blocked" />

        <rikka.material.preference.MaterialSwitchPreference
            app:defaultValue="true"
            app:key="schedule_message"
            app:summary="Enable schedule message option in conversation menu"
            app:title="Schedule Message" />

        <rikka.material.preference.MaterialSwitchPreference
            app:defaultValue="true"
            app:dependency="schedule_message"
            app:key="schedule_live_notification"
            app:summary="@string/schedule_live_notification_sum"
            app:title="@string/schedule_live_notification" />

        <rikka.material.preference.MaterialSwitchPreference
            app:key="own_status_indicator"
            app:summary="@string/own_status_indicator_sum"
            app:title="@string/own_status_indicator" />

        <ListPreference
            app:dependency="own_status_indicator"
            app:defaultValue="0"
            app:entries="@array/own_status_style_entries"
            app:entryValues="@array/own_status_style_values"
            app:key="own_status_style"
            app:title="@string/own_status_style" />

        <ListPreference
            app:defaultValue="0"
            app:entries="@array/profile_picture_change_entries"
            app:entryValues="@array/profile_picture_change_values"
            app:iconSpaceReserved="false"
            app:key="profile_picture_change_toast"
            app:summary="@string/profile_picture_change_toast_sum"
            app:title="@string/profile_picture_change_toast" />

    </PreferenceCategory>

</PreferenceScreen>
