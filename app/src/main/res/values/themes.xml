<resources>

    <!-- Material 3 Expressive Theme - Light -->
    <style name="Base.AppTheme.Light" parent="Theme.Material3.DynamicColors.Light.Rikka">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimaryVariant">@color/primary_dark_light_light_status_bar</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:textAppearanceListItem">?textAppearanceSubtitle1</item>
        <item name="android:colorAccent">?colorPrimary</item>
        <item name="android:colorControlActivated">?colorPrimary</item>
        
        <!-- Material 3 Expressive Attributes -->
        <item name="colorSurfaceBright">@color/m3_surface_bright</item>
        <item name="colorSurfaceDim">@color/m3_surface_dim</item>
        <item name="colorSurfaceContainerLowest">@color/m3_surface_container_lowest</item>
        <item name="colorSurfaceContainerLow">@color/m3_surface_container_low</item>
        <item name="colorSurfaceContainer">@color/m3_surface_container</item>
        <item name="colorSurfaceContainerHigh">@color/m3_surface_container_high</item>
        <item name="colorSurfaceContainerHighest">@color/m3_surface_container_highest</item>
        <item name="colorOnSurfaceVariant">@color/m3_on_surface_variant</item>
        <item name="colorOutline">@color/m3_outline</item>
        <item name="colorOutlineVariant">@color/m3_outline_variant</item>
        
        <!-- Material 3 Shape Appearances - Standardized to 16dp for expressive design -->
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.Material3.Corner.Small</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.Material3.Corner.Large</item>
        <item name="shapeAppearanceCornerExtraLarge">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
        
        <!-- Transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="toolbarStyle">@style/ModernToolbarStyle</item>
        
        <!-- Material Time Picker Theme -->
        <item name="materialTimePickerTheme">@style/ThemeOverlay.Material3.MaterialTimePicker</item>
    </style>

    <style name="Theme.Light" parent="Base.AppTheme.Light" />

    <!-- Material 3 Expressive Theme - Dark -->
    <style name="Base.AppTheme" parent="Theme.Material3.DynamicColors.Dark.Rikka">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAppearanceListItem">?textAppearanceSubtitle1</item>
        <item name="android:colorAccent">?colorPrimary</item>
        <item name="android:colorControlActivated">?colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Material 3 Expressive Attributes for Dark -->
        <item name="colorSurfaceBright">@color/m3_surface_bright</item>
        <item name="colorSurfaceDim">@color/m3_surface_dim</item>
        <item name="colorSurfaceContainerLowest">@color/m3_surface_container_lowest</item>
        <item name="colorSurfaceContainerLow">@color/m3_surface_container_low</item>
        <item name="colorSurfaceContainer">@color/m3_surface_container</item>
        <item name="colorSurfaceContainerHigh">@color/m3_surface_container_high</item>
        <item name="colorSurfaceContainerHighest">@color/m3_surface_container_highest</item>
        <item name="colorOnSurfaceVariant">@color/m3_on_surface_variant</item>
        <item name="colorOutline">@color/m3_outline</item>
        <item name="colorOutlineVariant">@color/m3_outline_variant</item>
        
        <!-- Material 3 Shape Appearances for Dark -->
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.Material3.Corner.Small</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.Material3.Corner.Large</item>
        <item name="shapeAppearanceCornerExtraLarge">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
        
        <!-- Transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="toolbarStyle">@style/ModernToolbarStyle</item>
        
        <!-- Material Time Picker Theme for Dark Mode -->
        <item name="materialTimePickerTheme">@style/ThemeOverlay.Material3.MaterialTimePicker</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.Material3.ActionBar.Solid">
        <item name="background">?colorOnSecondary</item>
        <item name="contentInsetStart">5dp</item>
    </style>

    <style name="Theme" parent="Base.AppTheme" />

    <style name="DeviceInfoDialogLabel">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="DeviceInfoDialogValue">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:paddingBottom">@dimen/spacing_large</item>
    </style>

    <style name="StatusCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_radius_large</item>
        <item name="cardElevation">@dimen/card_elevation_high</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="contentPadding">@dimen/spacing_medium</item>
    </style>

    <style name="StatusCardTitle">
        <item name="android:textAppearance">?textAppearanceTitleMedium</item>
        <item name="android:textColor">@color/text_on_gradient</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StatusCardSummary">
        <item name="android:textAppearance">?textAppearanceBodyMedium</item>
        <item name="android:textColor">@color/text_on_gradient</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Material 3 Expressive Button Styles - Standardized -->
    <style name="ModernButton" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">@dimen/card_radius_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="ModernButton.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">@dimen/card_radius_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ModernButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">@dimen/card_radius_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="ModernButton.Elevated" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">@dimen/card_radius_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="ModernButton.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="cornerRadius">@dimen/card_radius_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/NavActiveIndicator</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="android:minHeight">@dimen/nav_bar_height</item>
        <item name="elevation">@dimen/card_elevation_high</item>
    </style>

    <style name="NavActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?colorPrimaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

</resources>